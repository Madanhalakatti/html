public class elseif {
    public static void main(String[] args) {
        integer n=0;
        if (n>0){
            System.out.println(" the integer is positive");
            if (n<0){
                System.out.println("the integer is negative");
                else {
                    System.out.println("the integer is zero");
                }
            }
        }
    }

}
